<!-- Describe the animation for activity_step2.xml -->
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto"
             xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- A transition describes an animation via start and end state -->
    <Transition
            motion:constraintSetStart="@+id/start"
            motion:constraintSetEnd="@+id/end">
        <OnSwipe motion:touchAnchorId="@id/red_star" />
    </Transition>

    <!-- Constraints to apply at the start of the animation -->
    <ConstraintSet android:id="@+id/start">
        <!-- TODO apply starting constraints -->
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/left_star"
            motion:layout_constraintStart_toEndOf="@+id/background"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="600dp"
            motion:layout_constraintHorizontal_bias="1.0"
            android:alpha="0.0" />
        <Constraint
            android:layout_height="53dp"
            android:layout_width="53dp"
            android:id="@+id/right_star"
            motion:layout_constraintBottom_toTopOf="@+id/background"
            android:layout_marginBottom="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="300dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3500dp"
            android:alpha="0.0" />
        <Constraint
            android:layout_height="46dp"
            android:layout_width="50dp"
            android:id="@+id/red_star"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1235dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.944"
            motion:layout_constraintStart_toStartOf="@+id/background"
            motion:layout_constraintHorizontal_bias="0.499" />
        <Constraint
            motion:layout_constraintVertical_bias="0.223"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/background" />
    </ConstraintSet>

    <!-- Constraints to apply at the end of the animation -->
    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/left_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/red_star"
            motion:layout_constraintTop_toBottomOf="@id/credits"
            motion:layout_constraintHorizontal_bias="0.448"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1500dp" />

        <Constraint
            android:id="@+id/red_star"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/red_star"
            motion:layout_editor_absoluteX="624dp" />

        <Constraint
            android:id="@+id/right_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintStart_toEndOf="@id/red_star"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/credits"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintBottom_toTopOf="@+id/background"
            android:layout_marginBottom="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />
        <Constraint
            motion:layout_constraintVertical_bias="1.0"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/background" />


    </ConstraintSet>
</MotionScene>